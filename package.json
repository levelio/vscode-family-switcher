{
  "publisher": "levelio",
  "name": "vscode-family-switcher",
  "displayName": "Family Switcher",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "description": "Quickly preview and switch between different font families in VSCode",
  "author": "levelio <levelio@petalmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/levelio/vscode-family-switcher#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/levelio/vscode-family-switcher"
  },
  "bugs": {
    "url": "https://github.com/levelio/vscode-family-switcher/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "LICENSE.md",
    "dist",
    "res"
  ],
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "views": {
      "fontFamilyContainer": [
        {
          "id": "fontFavoritesView",
          "name": "Favorite Fonts",
          "contextualTitle": "Font Favorites"
        },
        {
          "id": "fontAllView",
          "name": "All Fonts",
          "contextualTitle": "All Available Fonts"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fontFamilyContainer",
          "title": "Font Family Switcher",
          "icon": "$(text-size)"
        }
      ]
    },
    "commands": [
      {
        "command": "familySwitcher.switchFontFamily",
        "title": "VFS: Switch Font Family"
      },
      {
        "command": "familySwitcher.switchTerminalFontFamily",
        "title": "VFS: Switch Terminal Font Family"
      },
      {
        "command": "familySwitcher.manageFontFavorites",
        "title": "VFS: Manage Font Favorites"
      },
      {
        "command": "familySwitcher.loadFonts",
        "title": "VFS: Load and Cache Fonts"
      },
      {
        "command": "familySwitcher.refreshFonts",
        "title": "Refresh Fonts",
        "icon": "$(refresh)"
      },
      {
        "command": "familySwitcher.loadFontsFromView",
        "title": "Load Fonts",
        "icon": "$(cloud-download)"
      },
      {
        "command": "familySwitcher.addToFavorites",
        "title": "Add to Favorites",
        "icon": "$(add)"
      },
      {
        "command": "familySwitcher.removeFromFavorites",
        "title": "Remove from Favorites",
        "icon": "$(remove)"
      },
      {
        "command": "familySwitcher.previewFont",
        "title": "Preview Font",
        "icon": "$(eye)"
      },
      {
        "command": "familySwitcher.applyEditorFont",
        "title": "Apply to Editor",
        "icon": "$(edit)"
      },
      {
        "command": "familySwitcher.applyTerminalFont",
        "title": "Apply to Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "familySwitcher.searchFonts",
        "title": "Search Fonts",
        "icon": "$(search)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "familySwitcher",
      "properties": {
        "vfs.favorites": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of font families to include in the font selection"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "familySwitcher.loadFontsFromView",
          "when": "view == fontFavoritesView || view == fontAllView",
          "group": "navigation@1"
        },
        {
          "command": "familySwitcher.refreshFonts",
          "when": "view == fontFavoritesView || view == fontAllView",
          "group": "navigation@2"
        },
        {
          "command": "familySwitcher.searchFonts",
          "when": "view == fontAllView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "familySwitcher.applyEditorFont",
          "when": "view == fontFavoritesView || view == fontAllView",
          "group": "inline@1"
        },
        {
          "command": "familySwitcher.applyTerminalFont",
          "when": "view == fontFavoritesView || view == fontAllView",
          "group": "inline@2"
        },
        {
          "command": "familySwitcher.addToFavorites",
          "when": "view == fontAllView && viewItem == availableFont",
          "group": "inline@3"
        },
        {
          "command": "familySwitcher.removeFromFavorites",
          "when": "viewItem == favoritedFont || viewItem == favoritedFontInAll",
          "group": "inline@4"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "prepare": "nr update",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish",
    "pack": "vsce package",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "font-list": "^1.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.1",
    "@antfu/ni": "^24.2.0",
    "@types/node": "^22.13.4",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.2.2",
    "bumpp": "^10.0.3",
    "eslint": "^9.20.1",
    "esno": "^4.8.0",
    "pnpm": "^10.4.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vscode-ext-gen": "^1.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
